{
    "git.alwaysSignOff": true,
    "cSpell.words": [
        "capi",
        "CLRF",
        "iothread",
        "keyctl",
        "nolint",
        "proxmoxtf",
        "qcow",
        "rootfs",
        "signoff",
        "tflog",
        "unmanaged",
        "virtio",
        "VLANID",
        "vmbr",
        "VMID",
        "vztmpl"
    ],
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--config=${workspaceFolder}/.golangci.yml",
        "--fast"
    ],
    "go.lintOnSave": "workspace",
    "go.testEnvFile": "${workspaceFolder}/test.env",
}
